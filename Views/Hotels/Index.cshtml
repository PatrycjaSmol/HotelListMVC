<br />
<div class="container row p-0 m-0">
    <div class="col-6">
        <h2 class="text-info">Hotel List</h2>
    </div>
    <div class="col-3 offset-3">
        <a asp-action="Upsert" asp-controller="Hotels" class="btn btn-info form-control text-center border-white">
            Add New Hotel
        </a>
    </div>
    <div class="col-12 border p-3">
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Country</th>
                    <th>Address</th>
                    <th>Rating</th>
                    <th></th>
                </tr>
            </thead>

        </table>
    </div>

</div>

@section Scripts{
    <script src="~/js/hotelList.js"></script>
}
